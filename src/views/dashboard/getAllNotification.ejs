<%- include('../includes/head-freelancer'); %>

  <%- include('../includes/header-freelancer'); %>

    <div class="container-fluid">
      <div class="row">
        <%- include('../includes/sidebar-menu-freelancer'); %>

          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div
              class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
              <h1 class="h2">Dashboard</h1>
              <%- include('../includes/alert'); %>
            </div>
            <div class="row">
              <div class="col-xl-12" id="freelancersDashboard">
                <div class="row">
                  <div class="col col-xl-12" id="getAssignmentsDiv">
                      <% if(allNotification && allNotification.length !==0) {%>
                        <ul class="list-group">
                        <% for(var i=0; i < allNotification.length; i++) { %>
                            <li class="list-group-item list-group-item-light"><%= allNotification[i].message %>&nbsp; <span class="float-end"><% if(allNotification[i].read_status === 1) { %><i class="fas fa-envelope-open" onclick="updateNotificationReadStatus0('<%= allNotification[i].notification_id %>')"></i><% }else { %><i class="fas fa-envelope" onclick="updateNotificationReadStatus1('<%= allNotification[i].notification_id %>')"></i><% } %></span></li>
                          <%} %>
                        </ul>
                            <% }else { %>

                              <p>No notification data found!</p>

                              <% } %>
                   

                  </div>
                </div>
              </div>
            </div>
      </div>
      </main>
    </div>
    </div>

    <%- include('../includes/footer-freelancer'); %>